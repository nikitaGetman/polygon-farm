{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "paths": {
      "*": ["*"],
      "~/*": ["src/*"]
    },
    "baseUrl": "."
  },
  "include": [
    "./hardhat.config.ts",
    "./scripts",
    "./test",
    "./typechain-types",
    "./deploy",
    "./utils",
    "./tasks"
  ],
  "files": ["./hardhat.config.ts"]
}
